{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2016"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "webpack"
  ]
}